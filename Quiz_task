  <script>
    var currentQuestion = 0;
    var timer;
    var score = 0;

    function startQuiz() {
      startTimer(60); // Set timer for 1 minute (60 seconds)
      showNextQuestion();
    }

    function startTimer(seconds) {
      var timerLabel = document.getElementById('timer-label');

      clearInterval(timer);

      timer = setInterval(function() {
        seconds--;

        if (seconds >= 0) {
          timerLabel.textContent = 'Time left: ' + seconds + ' seconds';
        } else {
          clearInterval(timer);
          timerLabel.textContent = 'Time\'s up!';
          showNextQuestion();
        }
      }, 1000);
    }

    function resetTimer() {
      var timerLabel = document.getElementById('timer-label');
      timerLabel.textContent = '';
      clearInterval(timer);
    }

    function showNextQuestion() {
      var questions = document.querySelectorAll('.question-container');
      var feedbackContainer = document.getElementById('feedback-container');

      // Hide current question
      if (currentQuestion > 0) {
        questions[currentQuestion - 1].style.display = 'none';
      }

      // Show next question or end the quiz
      if (currentQuestion < questions.length) {
        questions[currentQuestion].style.display = 'block';
        currentQuestion++;
      } else {
        alert('Quiz completed! Your score: ' + score);
        currentQuestion = 0;
        resetTimer();
        printScore();
      }
    }

    function printScore() {
      var feedbackContainer = document.getElementById('feedback-container');
      var feedback = document.createElement('div');
      feedback.className = 'answer-feedback';
      feedback.textContent = 'Your final score is: ' + score;
      feedbackContainer.innerHTML = '';
      feedbackContainer.appendChild(feedback);
    }

    function checkAnswer(questionNumber) {
      var selectedOption = document.querySelector('input[name="question' + questionNumber + '"]:checked');
      var feedbackContainer = document.getElementById('feedback-container');

      if (selectedOption) {
        // Check if the selected option is correct
        var isCorrect = selectedOption.value.toLowerCase() === getCorrectAnswer(questionNumber).toLowerCase();
        if (isCorrect) {
          score++;
        }

        var feedback = document.createElement('div');
        feedback.className = 'answer-feedback';
        feedback.textContent = 'Your answer for question ' + questionNumber + ': ' + (isCorrect ? 'Correct' : 'Incorrect');
        feedbackContainer.innerHTML = '';
        feedbackContainer.appendChild(feedback);

        // Show feedback for 2 seconds before moving to the next question
        setTimeout(function () {
          feedbackContainer.innerHTML = '';
          showNextQuestion();
        }, 2000);
      } else {
        alert('Please select an answer for question ' + questionNumber);
      }
    }

    function getCorrectAnswer(questionNumber) {
      // Define correct answers for each question
      if (questionNumber === 1) {
        return 'Strings';
      } else if (questionNumber === 2) {
        return 'quotes';
      } else if (questionNumber === 3) {
        return 'numbers and Strings';
      } else if (questionNumber === 4) {
        return 'commas';
      } else if (questionNumber === 5) {
        return 'JavaScript';
      }
      // Add more cases for additional questions if needed
    }


    function startQuiz() {
      // Hide the "Start Quiz" button
      var startButton = document.getElementById('startButton');
      startButton.style.display = 'none';

      startTimer(60); // Set timer for 1 minute (60 seconds)
      showNextQuestion();
    }

  </script>
</head>
